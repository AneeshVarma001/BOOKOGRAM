<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.bookshare.activities.SplashActivity">




    <com.example.bookshare.customviews.TriangleShapeView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/view"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/view6" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/density_96dp"
        android:layout_height="@dimen/density_96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/density_56dp"
        android:src="@drawable/baseline_menu_book_24"
        app:tint="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="@string/app_name_splash"
        android:fontFamily="@font/raleway"
        android:layout_centerHorizontal="true"
        android:textColor="@color/navigationBarColor"
        android:textSize="30sp" />


</RelativeLayout>
