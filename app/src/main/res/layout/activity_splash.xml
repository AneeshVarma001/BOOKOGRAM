<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bookshare.activities.SplashActivity">


    <com.example.bookshare.customviews.TriangleShapeView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/density_96dp"
        android:layout_height="@dimen/density_96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/density_56dp"
        android:src="@drawable/baseline_menu_book_24"
        app:tint="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="@string/app_name_splash"
        android:fontFamily="@font/raleway"
        android:layout_centerHorizontal="true"
        android:textColor="@color/navigationBarColor"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:fontFamily="@font/raleway_extrabold"
            android:textColor="@color/navigationBarColor"
            android:text = "Developed By" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_extrabold"
            android:textColor="@color/navigationBarColor"
            android:text = "Praneeth Rangineni" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/raleway_extrabold"
            android:textColor="@color/navigationBarColor"
            android:text = "Aneesh Varma Lakkarsu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/raleway_extrabold"
            android:textColor="@color/navigationBarColor"
            android:text = "Chandu Yadav Nalamada" />



    </LinearLayout>

</RelativeLayout>
